<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <GridLayout
        android:layout_alignParentTop="false"
        android:id="@+id/numberSelectionGrid"
        android:layout_centerHorizontal="true"
        android:elevation="0dp"
        android:layout_marginTop="100dp"
        android:layout_height="350dp"
        android:layout_width="290dp">

        <ImageButton
            android:layout_below="@+id/numberSelectionGrid"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/fourCards"
            android:background="@drawable/four"
            android:layout_width="80dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_height="100dp"
            android:onClick="UserChoiceAction (UserChoiceActivity)"
            android:layout_margin="5dp" />

        <ImageButton
            android:id="@+id/sixCards"
            android:background="@drawable/six"
            android:layout_width="80dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_below="@+id/numberSelectionGrid"
            android:layout_toRightOf="@+id/twelveCards"
            android:layout_toEndOf="@+id/twelveCards"
            android:layout_height="100dp"
            android:layout_margin="5dp" />

        <ImageButton
            android:id="@+id/eightCards"
            android:background="@drawable/eight"
            android:layout_below="@+id/numberSelectionGrid"
            android:layout_toRightOf="@+id/sixCards"
            android:layout_toEndOf="@+id/sixCards"
            android:layout_width="80dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_height="100dp"
            android:layout_margin="5dp" />

        <ImageButton
            android:id="@+id/tenCards"
            android:background="@drawable/ten"
            android:layout_width="80dp"
            android:layout_alignTop="@+id/twelveCards"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_height="100dp"
            android:layout_margin="5dp" />

        <ImageButton
            android:id="@+id/twelveCards"
            android:background="@drawable/twelve"
            android:layout_width="80dp"
            android:layout_below="@+id/numberSelectionGrid"
            android:layout_toRightOf="@+id/tenCards"
            android:layout_toEndOf="@+id/tenCards"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_height="100dp"
            android:layout_margin="5dp" />

        <ImageButton
            android:id="@+id/fourteenCards"
            android:background="@drawable/fourteen"
            android:layout_below="@+id/numberSelectionGrid"
            android:layout_toRightOf="@+id/twelveCards"
            android:layout_toEndOf="@+id/twelveCards"
            android:layout_width="80dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_height="100dp"
            android:layout_margin="5dp" />

        <ImageButton
            android:id="@+id/sixteenCards"
            android:background="@drawable/sixteen"
            android:layout_width="80dp"
            android:layout_below="@+id/tenCards"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_height="100dp"
            android:layout_margin="5dp" />

        <ImageButton
            android:id="@+id/eighteenCards"
            android:background="@drawable/eighteen"
            android:layout_width="80dp"
            android:layout_below="@+id/twelveCards"
            android:layout_toRightOf="@+id/sixteenCards"
            android:layout_toEndOf="@+id/sixteenCards"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_height="100dp"
            android:layout_margin="5dp" />

        <ImageButton
            android:id="@+id/twentyCards"
            android:background="@drawable/twenty"
            android:layout_width="80dp"
            android:layout_below="@+id/twelveCards"
            android:layout_toRightOf="@+id/eighteenCards"
            android:layout_toEndOf="@+id/eighteenCards"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_height="100dp"
            android:layout_margin="5dp" />

    </GridLayout>

    <TextView
        android:text="Select number of cards:"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView2"
        android:textSize="40sp"
        android:textAlignment="center" />

</RelativeLayout>